@model Admin.Models.Service.ServicesDetailViewModel


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Yeni Detal</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        <input type="radio" id="Status" value="true" name="Status" class="custom-control-input">
                        <label class="custom-control-label" for="Status">Aktiv</label>
                        <span class="field-validation-valid text-danger" asp-validation-for="Status"></span>

                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="StatusFal" value="false" name="Status" class="custom-control-input">
                        <label class="custom-control-label" for="StatusFal">Passiv</label>

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Detail">Detal</label>
                    <input class="form-control form-control-user slug-source" asp-for="Detail">
                    <span class="field-validation-valid" asp-validation-for="Detail"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SubDetail">Yarım Detal</label>
                    <input class="form-control form-control-user slug-source" asp-for="SubDetail">
                    <span class="field-validation-valid " asp-validation-for="SubDetail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Şəkli</label>
                    <input class="form-control form-control-user slug-source" asp-for="Image">
                    <span class="field-validation-valid " asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Document">Dosya</label>
                    <input class="form-control form-control-user slug-source" asp-for="Document">
                    <span class="field-validation-valid " asp-validation-for="Document"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Information">İnformasiya</label>
                    <input class="form-control form-control-user slug-source" asp-for="Information">
                    <span class="field-validation-valid " asp-validation-for="Information"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceId">Xidmət</label>
                    <select class="form-control form-control-user" asp-for="ServiceId">
                        <option value="0" selected disabled>Seçin</option>
                        @foreach (var item in ViewBag.Services)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="field-validation-valid" asp-validation-for="ServiceId"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Əlavə et</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}