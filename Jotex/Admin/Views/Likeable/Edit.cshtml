@model Admin.Models.Pages.LikeableViewModel
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Düzəliş</h1>

    <!-- DataTales Example -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="the-box no-border">
                        <form method="post">
                           
                            <div class="form-group">
                                <label>Vəziyyəti</label>
                                <div class="custom-control custom-radio custom-control-inline ml-3">
                                    <input type="radio" id="Status" value="true" name="Status" class="custom-control-input" @(Model.Status ? "checked" : "")>
                                    <label class="custom-control-label" for="Status">Aktiv</label>
                                    <span class="field-validation-valid text-danger" asp-validation-for="Status"></span>

                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" id="StatusFal" value="false" name="Status" class="custom-control-input" @(Model.Status ? "" : "checked")>
                                    <label class="custom-control-label" for="StatusFal">Passiv</label>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-sm-8 col-lg-8">
                                    <div class="form-group">
                                        <label asp-for="Title">Başlıq</label>
                                        <input class="form-control form-control-user slug-source" asp-for="Title">
                                        <span class="field-validation-valid" asp-validation-for="Title"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Information">Mətn</label>
                                        <textarea class="form-control form-control-user slug-source" asp-for="Information"></textarea>
                                        <span class="field-validation-valid" asp-validation-for="Information"></span>
                                    </div>
                                </div>
                                <!-- /.col-sm-8 -->
                                <div class="col-sm-4 col-lg-4">
                                    <div class="form-group">
                                        <label asp-for="CallUs">Yazı</label>
                                        <input class="form-control form-control-user slug-source" asp-for="CallUs">
                                        <span class="field-validation-valid" asp-validation-for="CallUs"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Phone">Telefon</label>
                                        <input class="form-control form-control-user slug-source" asp-for="Phone">
                                        <span class="field-validation-valid" asp-validation-for="Phone"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Phote">Şəkil</label>
                                        <input class="form-control form-control-user slug-source" asp-for="Phote">
                                        <span class="field-validation-valid" asp-validation-for="Phote"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Video">Video</label>
                                        <input class="form-control form-control-user slug-source" asp-for="Video">
                                        <span class="field-validation-valid" asp-validation-for="Video"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Experience">Təcrübə</label>
                                        <input class="form-control form-control-user slug-source" asp-for="Experience">
                                        <span class="field-validation-valid" asp-validation-for="Experience"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Year">İl</label>
                                        <input class="form-control form-control-user slug-source" asp-for="Year">
                                        <span class="field-validation-valid" asp-validation-for="Year"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ActionText">Hərəkət Yazısı</label>
                                        <input class="form-control form-control-user slug-source" asp-for="ActionText">
                                        <span class="field-validation-valid" asp-validation-for="ActionText"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EndPoint">Link</label>
                                        <input class="form-control form-control-user slug-source" asp-for="EndPoint">
                                        <span class="field-validation-valid" asp-validation-for="EndPoint"></span>
                                    </div>
                                    <div class="form-group d-flex justify-content-end mt-3">
                                        <button type="submit" class="btn btn-primary btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-pencil-alt"></i>
                                            </span>
                                            <span class="text">Yenilə</span>
                                        </button>
                                    </div>
                                </div>
                                <!-- /.col-sm-4 -->
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>



</div>
<!-- /.container-fluid -->

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

