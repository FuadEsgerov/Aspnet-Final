@model IEnumerable<Admin.Models.Pages.BlogViewModel>
@inject Repository.Services.ICloudinaryService _cloudinaryServise
@{
    ViewData["Title"] = "Blog";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Blog</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="create" class="m-0 font-weight-bold btn btn-success">Yeni Blog</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Başlığı</th>
                            <th>Mətni</th>
                            <th>Taqı</th>
                            <th>Şəkli</th>
                           <th>Düzəliş</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Başlığı</th>
                            <th>Mətni</th>
                            <th>Taqı</th>
                            <th>Şəkli</th>
                            <th>Düzəliş</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @if (@item.Status)
                                {
                                    <span class="badge badge-success">Aktive</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Deaktiv</span>
                                }
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Text</td>
                            <td>@item.Tag</td>
                            <td>
                                <img width="100" src="@_cloudinaryServise.BuildUrl(item.Image)" />
                            </td>



                            <td style="width:14%">
                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle deleteitem">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-success btn-circle ml-3 ">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->