@await Html.PartialAsync("../Shared/Page/_BreadCrumb")
<!-- end page-title -->
<!-- start contact-section -->
<section class="contact-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <div class="section-title-s4">
                    <span>Contact with us</span>
                    <h2>Lets get in touch!</h2>
                    <p>Maecenas tempus, tellus eget condimentum rhoncus, sem quam semper libero, sit amet adipiscing sem neque sed ipsum. Nam quam nuncIt showed a lady fitted out</p>
                </div>
            </div>
            <div class="col col-xs-12">
                <div class="contact-info-grids">
                    <div class="grid">
                        <i class="fi flaticon-house"></i>
                        <h4>Head Office</h4>
                        <p>32 bejory soroni road  niceh Melborn Austria</p>
                    </div>
                    <div class="grid">
                        <i class="fi flaticon-email"></i>
                        <h4>Email Address</h4>
                        <p>demo@example.com <br>example@g.com</p>
                    </div>
                    <div class="grid">
                        <i class="fi flaticon-call"></i>
                        <h4>Phone Number</h4>
                        <p>++98747561741 <br>++34+6465465464521</p>
                    </div>
                    <div class="grid">
                        <i class="fi flaticon-alarm"></i>
                        <h4>Opening Hours</h4>
                        <p>Mon day - Sun day  <br>10Am - 5PM</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="contact-form-area">
            <div class="row">
                <div class="col col-md-4">
                    <div class="contact-text">
                        <h3>Still have query, then fill out the form!</h3>
                        <p>Maecenas tempus, tellus eget condimentum rhoncus, sem quam semper libero, sit amet adipiscing sem neque sed ipsum. Nam quam nuncIt showed a lady fitted out</p>
                    </div>
                </div>
                <div class="col col-md-8">
                    <div class="contact-form">
                        <form method="post" class="contact-validation-active" id="contact-form-main">
                            <div class="form-group">
                                <input asp-for="@Model.Name" class="form-control" placeholder="Name*">
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="@Model.Email" class="form-control" placeholder="Email*">
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="@Model.Phone" class="form-control" placeholder="Phone*">
                                <span asp-validation-for="@Model.Phone" class="text-danger"></span>

                            </div>
                            <div>
                                <select asp-for="@Model.Subject" class="form-control">

                                    <option disabled="disabled" selected>Contact subject</option>
                                    <option>Subject 1</option>
                                    <option>Subject 2</option>
                                    <option>Subject 3</option>
                                </select>
                                <span asp-validation-for="@Model.Subject" class="text-danger"></span>

                            </div>
                            <div class="fullwidth">
                                <textarea asp-for="@Model.Description" class="form-control" placeholder="Case Description..."></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>

                            </div>
                            <div class="submit-area">
                                <button type="submit" class="theme-btn">Submit It Now</button>
                                <div id="loader">
                                    <i class="ti-reload"></i>
                                </div>
                            </div>
                            <div class="clearfix error-handling-messages">
                                <div id="success">Thank you</div>
                                <div id="error"> Error occurred while sending email. Please try again later. </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end container -->
</section>
<!-- end contact-section -->
